@model BudgetApp.Models.Dtos.CategoryDto
@{
    
}
<div class="modal fade" id="newCategoryModal" tabindex="-1" role="dialog" aria-labelledby="newCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newCategoryModalLabel">Create New Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulario para crear la categoría -->
                @using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Type)
                        @Html.DropDownList("Type", new SelectList(new[] { "Income", "Expense" }), "Select Type", new { @class = "form-control" })
                    </div>               
                    <button type="submit" class="btn btn-primary">Create</button>
                }
            </div>
        </div>
    </div>
</div>